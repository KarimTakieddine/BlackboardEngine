#version 440 core

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

in vec3 position;
in vec3 color;
in vec2 textureCoordinates;

out vec3 vertexColor;
out vec2 samplerCoordinates;

void main()
{
	vertexColor = color;
	samplerCoordinates = textureCoordinates;
	
	gl_Position = projection * view * model * vec4(position, 1.0);
}